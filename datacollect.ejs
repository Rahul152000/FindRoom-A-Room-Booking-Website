          </select>
      </div></div>
       <div class="row">
        <div class="col-25">
          <label for="fname">PRICE</label>
        </div>
        <div class="col-75">
          <input type="text" id="PRICE" name="Price" value="<%=products[0].Price%>" placeholder="Your name..">
        </div>
      </div>
          <div class="row">
            <input type="submit" value="Make Payment">
          </div>
        </form>
      </div>



</body>
